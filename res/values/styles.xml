    <!-- Email -->
    <style name="ComposeBodyStyle">
        <item name="android:textColor">@color/med_gray</item>
        <item name="android:textColorHint">@color/med_gray</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:background">@null</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">42.0dip</item>
        <item name="android:inputType">textLongMessage|textCapSentences|textAutoCorrect|textMultiLine</item>
        <item name="android:imeOptions">actionDone|flagNoExtractUi|flagNoEnterAction</item>
    </style>
    <style name="ComposeFieldLayout" parent="@android:style/Widget.Holo.EditText">
        <item name="android:textColor">#ffaadd00</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingTop">0.0dip</item>
        <item name="android:focusable">false</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:addStatesFromChildren">true</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="EmailTheme" parent="@android:style/Theme.Holo" />
    <style name="PlainEditText" parent="@android:style/Widget.Holo.EditText">
        <item name="android:background">@null</item>
    </style>
