<resources>
    <style name="HTC.EleganceX" parent="@android:style/Theme" />
    <style name="Theme" parent="@android:style/Theme">
        <item name="android:colorBackground">@color/transparent</item>
        <item name="android:windowBackground">@drawable/background_elegance</item>
    </style> 
    <style name="Widget.ProgressBar.Horizontal" parent="@android:style/Widget.ProgressBar">
        <item name="android:maxHeight">10.0dip</item>
        <item name="android:indeterminateOnly">false</item>
        <item name="android:indeterminateDrawable">@drawable/progress_indeterminate_horizontal</item>
        <item name="android:progressDrawable">@drawable/progress_horizontal</item>
        <item name="android:minHeight">10.0dip</item>
    </style>
    <style name="Widget.SeekBar" parent="@android:style/Widget">
        <item name="android:focusable">true</item>
        <item name="android:maxHeight">10.0dip</item>
        <item name="android:indeterminateOnly">false</item>
        <item name="android:indeterminateDrawable">@drawable/progress_horizontal</item>
        <item name="android:progressDrawable">@drawable/progress_horizontal</item>
        <item name="android:minHeight">10.0dip</item>
        <item name="android:thumb">@drawable/seek_thumb</item>
        <item name="android:thumbOffset">8.0dip</item>
    </style>
    <style name="TextAppearance.StatusBar.Clock" parent="@android:style/TextAppearance.StatusBar.Icon">
        <item name="android:textSize">16.0dip</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#ffffffff</item>
    </style>
    <style name="TextAppearance.StatusBar.IntruderAlert" parent="@android:style/Theme.Holo.Light.Panel">
        <item name="android:textColor">#ffffffff</item>
    </style>
    <style name="TextAppearance.StatusBar.SystemPanel" parent="@android:style/Theme.Holo.Light.Panel">
        <item name="android:textAppearance">?android:textAppearance</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#ffffffff</item>
    </style>
    <style name="TextAppearance.StatusBar.TextButton" parent="@android:style/Theme.Holo.Light.Panel">
        <item name="android:textAppearance">?android:textAppearance</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#ffffffff</item>
    </style>
    <style name="TextAppearance.StatusBar.PhoneTicker" parent="@android:style/Theme.Holo.Wallpaper">
        <item name="android:textSize">14.0dip</item>
        <item name="android:textColor">#ffffffff</item>
    </style>
</resources>
